<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="1dp"
    android:background="@drawable/back_list_item"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView_list_adres"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnWeight="3"
        android:layout_marginStart="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:text="A13" />

    <TextView
        android:id="@+id/textView_list_tarih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="5"
        tools:text="23.07.1998 09:27" />

    <TextView
        android:id="@+id/textView_list_lotkodu"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnWeight="3"
        android:layout_marginStart="8dp"
        tools:text="31720" />

    <TextView
        android:id="@+id/textView_list_adet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="5"
        android:layout_gravity="center"
        tools:text="35" />

    <TextView
        android:id="@+id/textView_list_musteri"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_columnWeight="5"
        android:gravity="center"
        tools:text="Ertoğlu İnşaat" />

    <ImageView
        android:id="@+id/imageView_list_haraket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_columnWeight="5"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_depo_giris" />

</GridLayout>
