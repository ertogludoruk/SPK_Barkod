<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="1dp"
    android:background="@drawable/back_list_item"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView_list_adres"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginStart="8dp"
        android:text="A13"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/textView_list_tarih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:text="23.07.1998 09:27" />

    <View
        android:id="@+id/view_list_islemdurumu"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_gravity="center"
        android:background="@drawable/back_green" />

    <TextView
        android:id="@+id/textView_list_lotkodu"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginStart="8dp"
        android:text="31720" />

    <TextView
        android:id="@+id/textView_list_adet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="center"
        android:text="35" />

    <TextView
        android:id="@+id/textView_list_musteri"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        android:gravity="center"
        android:text="Ertoğlu İnşaat" />

</GridLayout>
