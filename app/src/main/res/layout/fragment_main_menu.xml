<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuFragment" >

    <ImageView
        android:id="@+id/imageView_Giris"
        android:layout_width="@dimen/menu_button"
        android:layout_height="@dimen/menu_button"
        android:layout_marginStart="80dp"
        android:layout_marginTop="180dp"
        android:src="@drawable/giris_islemi_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_Oku"
        android:layout_width="@dimen/menu_button"
        android:layout_height="@dimen/menu_button"
        android:src="@drawable/okuma_islemi_icon"
        app:layout_constraintBottom_toTopOf="@+id/imageView_Giris"
        app:layout_constraintStart_toStartOf="@+id/imageView_Giris" />

    <ImageView
        android:id="@+id/imageView_Cikis"
        android:layout_width="@dimen/menu_button"
        android:layout_height="@dimen/menu_button"
        android:src="@drawable/cikis_islemi_icon"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_Giris"
        app:layout_constraintStart_toEndOf="@+id/imageView_Giris" />

    <ImageView
        android:id="@+id/imageView_DepoAra"
        android:layout_width="@dimen/menu_button"
        android:layout_height="@dimen/menu_button"
        android:src="@drawable/arama_islemi_icon"
        app:layout_constraintBottom_toTopOf="@+id/imageView_Cikis"
        app:layout_constraintStart_toEndOf="@+id/imageView_Oku" />

</androidx.constraintlayout.widget.ConstraintLayout>